<div class="well">
  <%= form_for @user do |f| %>
  <%= render 'shared/errors', active_record_object: @user %>
    <div class="control-group">
      <%= f.label :user_name %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group" %>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group" %>
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: 'Pacific Time (US & Canada)' %>
    </div>
    <div class="control-group" %>
      <%= f.label :phone, "Phone Number <small>(numbers only)</small>".html_safe %>
      <%= f.text_field :phone, maxlength: 10 %>
      <%= link_to '#', id: 'two_factor_phone' do %>
        <i class="icon-question-sign"></i>
      <% end %>
    </div>
    <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: "btn btn-success" %>
  <% end %>
</div>
